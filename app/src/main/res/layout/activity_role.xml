<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gameRoleName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="角色用户名: "
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_gameRoleName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight= "1"
                    android:layout_marginTop = "3dp"
                    android:layout_marginBottom= "3dp"
                    android:hint= "please input "
                    android:inputType= "text"
                    android:maxLength= "1000"
                    android:textColor= "@color/black"
                    android:textSize= "17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gameRoleLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="角色用户等级: "
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_gameRoleLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight= "1"
                    android:layout_marginTop = "3dp"
                    android:layout_marginBottom= "3dp"
                    android:hint= "please input "
                    android:inputType= "text"
                    android:maxLength= "1000"
                    android:textColor= "@color/black"
                    android:textSize= "17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gameRoleID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="角色ID: "
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_gameRoleID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight= "1"
                    android:layout_marginTop = "3dp"
                    android:layout_marginBottom= "3dp"
                    android:hint= "please input "
                    android:inputType= "text"
                    android:maxLength= "15"
                    android:textColor= "@color/black"
                    android:textSize= "17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gameRoleBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="角色用户余额: "
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_gameRoleBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight= "1"
                    android:layout_marginTop = "3dp"
                    android:layout_marginBottom= "3dp"
                    android:hint= "please input "
                    android:inputType= "text"
                    android:maxLength= "20"
                    android:textColor= "@color/black"
                    android:textSize= "17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_vipLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="VIP等级: "
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_vipLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight= "1"
                    android:layout_marginTop = "3dp"
                    android:layout_marginBottom= "3dp"
                    android:hint= "please input "
                    android:inputType= "text"
                    android:maxLength= "5"
                    android:textColor= "@color/black"
                    android:textSize= "17sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_partyName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="公会社团: "
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_partyName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight= "1"
                    android:layout_marginTop = "3dp"
                    android:layout_marginBottom= "3dp"
                    android:hint= "please input "
                    android:inputType= "text"
                    android:maxLength= "12"
                    android:textColor= "@color/black"
                    android:textSize= "17sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_roleCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="创建人物" />

            <Button
                android:id="@+id/btn_roleUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="角色升级" />

            <Button
                android:id="@+id/btn_exitRC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退出创建" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_debugInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textIsSelectable="true"
        android:text="测试demo" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_startGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="进入游戏" />
    </LinearLayout>

</LinearLayout>